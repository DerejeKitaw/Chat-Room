extend layout

block content
  h1 Chat rooms
  a.btn.btn-primary(href="/admin/rooms/add") Create a new chat room
  table.table.table-striped
    theadtr
      th name
      th id
    tbody
       each room in rooms
        tr
          td(style="width: 50px;"): a(href="/admin/rooms/delete/"+room.id)
            span.glyphicon.glyphicon-remove
          td=room.name
          td=room.id
